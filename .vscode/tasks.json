{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Unit Tests",
      "type": "shell",
      "command": "make test/unit",
      "group": "test",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Integration Tests",
      "type": "shell",
      "command": "make test/integration",
      "group": "test",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Integration Tests (CI)",
      "type": "shell",
      "command": "make test/integration-ci",
      "group": "test",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Sample App",
      "type": "shell",
      "command": "make run-sample",
      "group": "build",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start MLflow Server",
      "type": "shell",
      "command": "make dev/up",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Stop MLflow Server",
      "type": "shell",
      "command": "make dev/down",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Seed Prompts",
      "type": "shell",
      "command": "make dev/seed",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "make lint",
      "group": "build",
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "All Checks",
      "type": "shell",
      "command": "make check",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": ["$go"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
